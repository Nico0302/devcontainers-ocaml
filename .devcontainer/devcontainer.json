{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--name",
        "devcontainer-ocaml"
    ],
    "remoteUser": "opam",
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "ocamllabs.ocaml-platform"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    }
}